
fn all @public
  case:
    [start_stop, start_get, increment_1_get, increment_val_get]
end

fn start_stop @public
  case _Config:
    (ok, Pid) = ioriofn_comet_listener.start_link([])
    stopped = ioriofn_comet_listener.stop(Pid)
end

fn start_get @public
  case _Config:
    (ok, Pid) = ioriofn_comet_listener.start_link([])
    (ok, 0) = ioriofn_comet_listener.get_count(Pid)
    stopped = ioriofn_comet_listener.stop(Pid)
end

fn increment_1_get @public
  case _Config:
    (ok, Pid) = ioriofn_comet_listener.start_link([])
    (ok, 1) = ioriofn_comet_listener.increment(Pid)
    (ok, 1) = ioriofn_comet_listener.get_count(Pid)
    stopped = ioriofn_comet_listener.stop(Pid)
end

fn increment_val_get @public
  case _Config:
    (ok, Pid) = ioriofn_comet_listener.start_link([])
    (ok, 12) = ioriofn_comet_listener.increment(Pid, 12)
    (ok, 12) = ioriofn_comet_listener.get_count(Pid)
    stopped = ioriofn_comet_listener.stop(Pid)
end
